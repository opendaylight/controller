module sal-queue {
    namespace "urn:opendaylight:queue:service";
    prefix queue;

    import opendaylight-inventory {prefix inv; revision-date "2013-08-19";}
    import opendaylight-queue-types {prefix queue-type; revision-date "2013-09-25";}
    import flow-capable-transaction {prefix tr;}

    revision "2013-11-07" {
        description "Initial revision of queue service";
    }        

    rpc get-queue-config {
        description "Get queues configured for a given node and port";
        input {
            uses tr:transaction-metadata;
            uses "inv:node-context-ref";
            leaf node-connector-id {
                type inv:node-connector-id;
            }
        }
        output {
            uses tr:transaction-aware;
            uses queue-type:node-queue-config;
        }
    }

    notification queue-config-update {
        description "queue config update sent by switch";
        uses inv:node;
        uses queue-type:node-queue-config;
        uses tr:multipart-transaction-aware;
    }


}
