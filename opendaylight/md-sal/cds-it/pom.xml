    <artifactId>sal-parent</artifactId>
    <version>1.4.0-SNAPSHOT</version>
  </parent>
  <artifactId>cds-it</artifactId>
  <packaging>bundle</packaging>

  <dependencies>
    <!-- Java -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
