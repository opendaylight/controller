<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">

        <command name="scheme">
            <action class="org.opendaylight.controller.connectionmanager.shell.Scheme">
               <property name="Scheme" ref="connectionmanager.shell"/>
            </action>
        </command>

        <command name="printNodes">
            <action class="org.opendaylight.controller.connectionmanager.shell.PrintNodes">
               <property name="PrintNodes" ref="connectionmanager.shell"/>
            </action>
        </command>
    </command-bundle>

    <reference id="connectionmanager.shell" interface="org.opendaylight.controller.connectionmanager.IConnectionManagerShell"/>

</blueprint>
