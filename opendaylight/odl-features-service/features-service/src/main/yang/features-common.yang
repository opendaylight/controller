module features-common {
    yang-version 1;

    namespace "urn:opendaylight:features-service:features-common";
    prefix "features-common";

    description
        "Common features types and definitions for features-service.";

    revision 2015-01-11 {
        description
            "3rd revision: Features Service to add / remove features via RESTConf";
    }

    typedef count {
        description 
            "Count the number of times the
            feature has been installed.";
        type int32;
    }

    typedef description {
        description "A human-readable description for an object.";
        type string {
            length "1..4096";
        }
    }

    typedef name {
        description 
            "A generic string name type. 
             Must start with a letter";
        type string {
            pattern '[a-zA-Z]([a-zA-Z0-9\-_.])*';
            length "1..256";
        }
    }

    typedef version {
        description 
            "A feature name type. 
             Must start with a letter";
        type string {
            pattern '[a-zA-Z]([a-zA-Z0-9\-_.])*';
            length "1..256";
        }
    }
    typedef isInstalled {
        description 
            "Tells if a feature is installed or not.";
        type boolean;
    }
}